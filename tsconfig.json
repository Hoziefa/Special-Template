{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",

        "baseUrl": "src",
        "paths": {
            "@appTypes/*": ["types/*", "types/index.ts"],
            "@views/*": ["views/*", "views/index.ts"],
            "@models/*": ["models/*", "models/index.ts"],
            "@utils/*": ["utils/*", "utils/index.ts"]
        },

        "noEmitOnError": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,

        "strict": true,

        "typeRoots": ["./types", "./node_modules/@types"],
        "skipLibCheck": true,

        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "files": ["src/index.ts"],
    "exclude": ["node_modules"]
}
